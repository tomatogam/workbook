    <% @posts.each do |post| %>
      <div class="genrename">
        <%= post.sub_category.category.genre.name %>
      </div>
      <div class="posttitle"><%= link_to post.title, "#" %></div>
      <div class="author">Authorï¼š<%= link_to post.user.name, "#" %></div>
      <div class="info">
